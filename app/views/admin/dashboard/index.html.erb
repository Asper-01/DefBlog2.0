<div class="container mt-4 card-container">
  <h1 class="text-center mb-4" style="font-family: 'Poppins', sans-serif; color: #2c3e50;">Bienvenue dans l'espace admin</h1>

  <div class="card">
    <div class="card-body">
      <!-- Bouton retour à l'accueil -->
      <div class="d-flex justify-content-center mb-3">
        <%= link_to "Retour à l'accueil", "/articles", class: "btn btn-outline-secondary w-75 rounded-custom" %>
      </div>

      <!-- Section Articles -->
      <div class="row justify-content-center mt-3">
        <div class="col-12 col-md-10 mb-4">
          <div class="card h-100">
            <div class="card-body d-flex flex-column align-items-center">
              <i class="fas fa-file-alt fa-4x mb-3" style="color: #2c3e50;"></i>
              <h5 class="card-title text-center" style="font-size: 1.4rem; color: #2c3e50;">Les Articles</h5>
              <p class="card-text text-center" style="color: #7f8c8d;">Créer ou modifier</p>
              <div class="d-flex justify-content-center gap-2">
                <%= link_to "Nouveau", new_admin_article_path, class: "btn btn-outline-success rounded-custom" %>
                <%= link_to "Gestion", admin_articles_path, class: "btn btn-outline-primary rounded-custom" %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Section Tags et Catégories -->
      <div class="row justify-content-center mt-3">
        <div class="col-12 col-md-5 mb-4">
          <div class="card h-100">
            <div class="card-body d-flex flex-column align-items-center">
              <i class="fas fa-tag fa-4x mb-3" style="color: #2c3e50;"></i>
              <h5 class="card-title text-center" style="font-size: 1.4rem; color: #2c3e50;">Les Tags</h5>
              <p class="card-text text-center" style="color: #7f8c8d;">Créer ou modifier</p>
              <div class="d-flex justify-content-center gap-2">
                <%= link_to "Nouveau", new_admin_tag_path, class: "btn btn-outline-success rounded-custom" %>
                <%= link_to "Gestion", admin_tags_path, class: "btn btn-outline-primary rounded-custom" %>
              </div>
            </div>
          </div>
        </div>

        <div class="col-12 col-md-5 mb-4">
          <div class="card h-100">
            <div class="card-body d-flex flex-column align-items-center">
              <i class="fas fa-tags fa-4x mb-3" style="color: #2c3e50;"></i>
              <h5 class="card-title text-center" style="font-size: 1.4rem; color: #2c3e50;">Les Catégories</h5>
              <p class="card-text text-center" style="color: #7f8c8d;">Créer ou modifier</p>
              <div class="d-flex justify-content-center gap-2">
                <%= link_to "Nouveau", new_admin_category_path, class: "btn btn-outline-success rounded-custom" %>
                <%= link_to "Gestion", admin_categories_path, class: "btn btn-outline-primary rounded-custom" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
