<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-6 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Créer un nouveau tag</h5>

          <% if @tag.errors.any? %>
            <div id="error_explanation" class="alert alert-danger">
              <h2><%= pluralize(@tag.errors.count, "erreur") %> ont empêché ce tag d'être sauvegardé :</h2>
              <ul>
                <% @tag.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= link_to "Retour au dashboard", "/admin/dashboard", class: "btn btn-outline-secondary w-100 my-3 rounded-custom" %>

<%= form_with(model: @tag, url: admin_tags_path, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name, "Nom du Tag", class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Nom du tag" %>
  </div>

  <div class="form-group">
    <%= form.label :category_id, "Catégorie", class: "form-label" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "Choisir une catégorie" }, class: "form-control" %>
  </div>

  <div class="d-flex justify-content-between mt-3">
    <%= form.submit "Créer le Tag", class: "btn btn-primary w-100 mb-3 mt-3 rounded-custom" %>
  </div>
<% end %>

        </div>
      </div>
    </div>
  </div>
</div>
