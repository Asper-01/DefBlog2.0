<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title text-center">Changer votre mot de passe</h5>

          <!-- Formulaire de changement de mot de passe -->
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %> <!-- Affichage des erreurs -->

            <%= f.input :reset_password_token, as: :hidden %>
            <%= f.full_error :reset_password_token %> <!-- Affichage des erreurs pour le token -->

            <div class="form-inputs">
              <%= f.input :password,
                          label: "Nouveau mot de passe",
                          required: true,
                          autofocus: true,
                          hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password", class: "form-control" },
                          label_html: { class: "form-label" } %>

              <%= f.input :password_confirmation,
                          label: "Confirmez votre nouveau mot de passe",
                          required: true,
                          input_html: { autocomplete: "new-password", class: "form-control" },
                          label_html: { class: "form-label" } %>
            </div>

            <div class="form-actions mt-3">
              <%= f.button :submit, "Changer mon mot de passe", class: "btn btn-primary w-100" %>
            </div>
          <% end %>

          <!-- Liens supplémentaires -->
          <div class="mt-3 text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
