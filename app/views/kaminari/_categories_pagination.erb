<% if @categories.total_pages > 1 %>
  <nav aria-label="Pagination des catégories">
    <ul class="pagination">
      <% if @categories.prev_page %>
        <li class="page-item">
          <%= link_to 'Précédent', url_for(page: @categories.prev_page), class: 'page-link' %>
        </li>
      <% else %>
        <li class="page-item disabled">
          <span class="page-link">Précédent</span>
        </li>
      <% end %>

      <% (1..@categories.total_pages).each do |page| %>
        <li class="page-item <%= 'active' if page == @categories.current_page %>">
          <%= link_to page, url_for(page: page), class: 'page-link' %>
        </li>
      <% end %>

      <% if @categories.next_page %>
        <li class="page-item">
          <%= link_to 'Suivant', url_for(page: @categories.next_page), class: 'page-link' %>
        </li>
      <% else %>
        <li class="page-item disabled">
          <span class="page-link">Suivant</span>
        </li>
      <% end %>
    </ul>
  </nav>
<% end %>
