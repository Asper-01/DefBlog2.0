
<div class="container mt-4">
  <div class="row">
    <div class="col-12 mb-4">
      <!-- Carte pour créer un tag -->
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Créer un nouveau tag</h5>

          <!-- Affichage des erreurs de validation -->
          <% if @tag.errors.any? %>
            <div id="error_explanation" class="alert alert-danger">
              <h2><%= pluralize(@tag.errors.count, "erreur") %> ont empêché ce tag d'être sauvegardé :</h2>
              <ul>
                <% @tag.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- Formulaire de création de tag -->
          <%= form_with(model: @tag, local: true) do |form| %>

            <!-- Champ nom -->
            <div class="form-group">
              <%= form.label :name, "Nom du Tag", class: "form-label" %>
              <%= form.text_field :name, class: "form-control", placeholder: "Entrez le nom du tag" %>
            </div>

            <!-- Bouton de soumission -->
            <%= form.submit "Créer le Tag", class: "btn btn-primary mt-3" %>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
